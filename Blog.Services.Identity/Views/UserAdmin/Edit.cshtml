@model UserEditViewModel

<form asp-action="Edit" method="post">
    <br />

    <input type="hidden" asp-for="UserId" value="@Model.UserId"/>

    <div class="container border p-3">
        <h1 class=text-black>Изменение информации о пользователе</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserName" class="form-control" value="@Model.UserName"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="FirstName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="LastName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-dark btn form-control">Назад</a>
            </div>

            <div class="col 5">
                <input type="submit" value="Изменить" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>