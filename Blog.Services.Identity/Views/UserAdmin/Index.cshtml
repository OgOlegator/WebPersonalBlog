@model IEnumerable<UserIndexViewModel>

@{
    ViewBag.Title = "Пользователи";
}

<div class="panel panel-primary">
    <br />

    <h3>Users</h3>

    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Логин</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Роли</th>
            <th style="min-width: 150px"></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет пользователей</td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.User.Id</td>
                    <td>@user.User.UserName</td>
                    <td>@user.User.FirstName</td>
                    <td>@user.User.LastName</td>
                    <td>@string.Join(",", user.Roles)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-userId="@user.User.Id">
                            Изменить
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-userId="@user.User.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>