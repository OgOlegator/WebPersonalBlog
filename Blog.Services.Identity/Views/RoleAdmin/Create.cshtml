@using Blog.Services.Identity.Models.ViewModels
@model RoleCreateViewModel

<form asp-action="Create" method="post">
    <br />
    <div class="container border p-3">
        <h1 class=text-black>Создание роли</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="RoleName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-dark btn form-control">Назад</a>
            </div>

            <div class="col 5">
                <input type="submit" value="Создать" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>